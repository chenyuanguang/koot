{
    "name": "koot-packages",
    "description": "All modules and packages for Koot.js",
    "private": true,
    "scripts": {
        "doc": "docsify serve docs",
        "bootstrap": "node bootstrap.js",
        "publish": "node ./publish.js",
        "test": "node ./test/index.js",
        "reset": "node ./reset.js",
        "lerna:changed": "lerna changed",
        "eslint:koot": "eslint \"packages/koot/!(node_modules|logs|dist|dist*|test)/**/*.+(js|jsx)\""
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cmux/koot"
    },
    "keywords": [
        "react",
        "isomorphic"
    ],
    "author": {
        "name": "dongwenxiao",
        "email": "cs_victor@126.com"
    },
    "contributors": [
        {
            "name": "diablohu",
            "email": "diablohudream@gmail.com",
            "url": "http://diablohu.com"
        }
    ],
    "bugs": {
        "url": "https://github.com/cmux/koot/issues"
    },
    "homepage": "https://github.com/cmux/koot",
    "engines": {
        "node": ">=8.0.0"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "docsify-cli": "4.3.0"
    },
    "devDependencies": {
        "babel-eslint": "10.0.2",
        "camelcase": "5.3.1",
        "chalk": "2.4.2",
        "cheerio": "1.0.0-rc.3",
        "crlf": "1.1.1",
        "eslint": "5.16.0",
        "eslint-config-koot": "0.2.0",
        "fs-extra": "8.1.0",
        "husky": "3.0.0",
        "inquirer": "6.4.1",
        "is-valid-path": "0.1.1",
        "jest": "24.8.0",
        "jsdom": "15.1.1",
        "latest-version": "5.1.0",
        "lerna": "3.15.0",
        "lerna-wizard": "1.0.9",
        "lint-staged": "9.1.0",
        "prettier": "1.18.2",
        "puppeteer": "1.18.1",
        "simple-git": "1.120.0"
    },
    "eslintIgnore": [
        "node_modules/**/*"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,cjs,mjs}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{json,md,css,less,sass,scss}": [
            "prettier --write",
            "git add"
        ]
    }
}
